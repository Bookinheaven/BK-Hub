<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/intro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_buddy_nmy_name_is_mbox_ni_m_your_personal_music_player"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/selectFolderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Folder"/>

    <TextView
        android:id="@+id/selectedFolderPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No folder selected"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"/>


</LinearLayout>
