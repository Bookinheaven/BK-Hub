<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    android:padding="16dp">

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"/>
    <Button
        android:id="@+id/sortByTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Title" />

    <Button
        android:id="@+id/sortByArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Artist" />

    <Button
        android:id="@+id/sortByDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Duration" />

    <Button
        android:id="@+id/sortBySize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Size" />

    <Button
        android:id="@+id/sortByComposer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Composer" />

    <Button
        android:id="@+id/sortByAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Album" />

    <Button
        android:id="@+id/sortByYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Year" />

    <Button
        android:id="@+id/sortByDateAdded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Date Added" />

    <Button
        android:id="@+id/sortByDateModified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Modified" />


</LinearLayout>
